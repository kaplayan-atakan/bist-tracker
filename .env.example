# BÄ°ST Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# ============== TELEGRAM (REQUIRED) ==============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============== FINNHUB (OPTIONAL) ==============
# Note: Finnhub FREE tier does NOT support BIST stocks
# Only needed if you have a premium subscription
FINNHUB_API_KEY=

# ============== TRADINGVIEW (OPTIONAL) ==============
# For real-time data (requires TradingView Pro account)
# Leave empty for 15-minute delayed data (free tier)
TRADINGVIEW_SESSION_ID=

# ============== LOG LEVEL ==============
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============== DRY RUN MODE ==============
# Set to true for testing (no actual Telegram messages sent)
# Set to false for production
DRY_RUN_MODE=true
